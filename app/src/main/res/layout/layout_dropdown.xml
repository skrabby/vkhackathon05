<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/authorContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dropdownTitle"
        style="@style/Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Автор" />

    <TextView
        android:id="@+id/dropdownSelector"
        style="@style/Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/background_light_ripple"
        android:clickable="true"
        android:focusable="true"
        android:importantForAutofill="no"
        android:padding="12dp"
        android:text="Elon Musk"
        app:drawableEndCompat="@drawable/ic_bottom_direction"
        app:drawableTint="@color/lightIconTertiary" />

</LinearLayout>